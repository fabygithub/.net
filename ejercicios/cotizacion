using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            int seleccion = 0;
            string dato = "";
            string saludo = "";
            string despedida = "";

            double gabinete = 0.0;
            double placa = 0.0;
            double ram = 0.0;
            double disco = 0.0;
            double tarjetadevideo = 0.0;
            double fuente = 0.0;

            // Ahora procedemos a comunicarnos con el usuario

            Console.WriteLine("buenos dias {0} ", saludo);


            Console.WriteLine("ingresa saludo");
            
            dato = Console.ReadLine();
            saludo = (dato);


            Console.WriteLine("ingresa despedida");

            dato = Console.ReadLine();
            despedida = (dato);

            
            Console.WriteLine("Escriba el precio gabinete: ");
            dato = Console.ReadLine();
            gabinete = Convert.ToDouble(dato);

            Console.WriteLine("Escriba el precio placa: ");
            dato = Console.ReadLine();
            placa = Convert.ToDouble(dato);

            Console.WriteLine("Escriba el precio placa: ");
            dato = Console.ReadLine();
            ram = Convert.ToDouble(dato);

            Console.WriteLine("Escriba el precio disco: ");
            dato = Console.ReadLine();
            disco = Convert.ToDouble(dato);

            Console.WriteLine("Escriba el precio tarjeta de video: ");
            dato = Console.ReadLine();
            tarjetadevideo = Convert.ToDouble(dato);

            Console.WriteLine("Escriba el precio tarjeta de video: ");
            dato = Console.ReadLine();
            fuente = Convert.ToDouble(dato);

            double total = gabinete + placa + ram + disco + tarjetadevideo + fuente;

            Console.WriteLine("el total de la cotizacion es {0} ", total);

            Console.WriteLine("me despido gracias {0} ", despedida);

        }

    }

    }

